{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true, 
    "jsx": "react-jsx",
    "module": "esnext",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "resolveJsonModule": true,   
    "allowSyntheticDefaultImports": true,        
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src"]
}
